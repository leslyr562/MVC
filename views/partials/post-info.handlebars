<article class="card">
  <div class="card-header">
    <a class="btn-no-style" href="{{post_url}}" target="_blank">{{title}}</a>
  </div>
  <div class="card-body">
    <p>{{ post_url }}</p>
  </div>
 <div class="meta">
  Created by {{user.username}} on {{format_date created_at}}
  |
  <a class="btn-light" href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
</div>
</article>